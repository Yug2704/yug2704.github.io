---
const {
  icon = "ℹ️",
  label = "",
  value = "",
  frValue = "",
  diffHtml = "",
  countrySlug = "",
  categorySlug = "",
} = Astro.props;

// lien vers page détaillée /country/<pays>/<categorie>
const href = `/country/${countrySlug}/${categorySlug}`;
---

<a href={href} class="card" style="display:block;text-decoration:none;color:inherit">
  <div class="kpi-title" style="display:flex;gap:.45rem;align-items:center;margin-bottom:.4rem;">
    <span style="font-size:1.1rem">{icon}</span>
    <strong>{label}</strong>
  </div>
  <div style="font-size:1.4rem;color:var(--accent);font-weight:700;">{value}</div>
  <div style="color:var(--muted);margin-top:6px;">
    France : {frValue}
    {diffHtml && <Fragment set:html={diffHtml} />}
  </div>
  <div style="margin-top:10px;font-size:.92rem;color:#a61b4d;background:var(--accent-100);display:inline-block;padding:.25rem .55rem;border-radius:999px;border:1px solid #ffd0df;">
    Voir le détail ▸
  </div>
</a>
